{
    "compilerOptions": {
        "module": "NodeNext",
        "target": "ES2022",
        "moduleResolution": "NodeNext",
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "allowSyntheticDefaultImports": true,
        "removeComments": true,
        "outDir": "./app",
        "sourceMap": true,
        "skipLibCheck": false
    },
    "include": ["./src/**/*", "index.js"],
    "exclude": ["./node_modules/**/*", "./app/**/*"],
}